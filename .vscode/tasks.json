{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "make -f \"engine/Makefile.engine.windows.mak\" all"
            },
            "linux": {
                "command": "make -f \"engine/Makefile.engine.linux.mak\" all"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Sandbox",
            "windows": {
                "command": "make -f \"engine/Makefile.sandbox.windows.mak\" all"
            },
            "linux": {
                "command": "make -f \"engine/Makefile.sandbox.linux.mak\" all"
            },
            "options": {
                "cwd": "${workspaceFolder}/sandbox"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Build Unit Tests",
            "windows": {
                "command": "make -f \"engine/Makefile.tests.windows.mak\" all"
            },
            "linux": {
                "command": "make -f \"engine/Makefile.tests.linux.mak\" all"
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "make --no-print-directory all"
            },
            "linux": {
                "command": "make --no-print-directory all"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "make clean"
            },
            "linux": {
                "command": "make clean"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": "build"
        }
    ],
    "version": "2.0.0"
}